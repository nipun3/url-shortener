datasource db {
  provider = "mongodb"
  url      = env("MONGO_DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  name      String
  apiKey    String
  createdAt DateTime @default(now())

  @@index(email)
  @@index(apiKey)
}

model Link {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  originalUrl  String
  shortUrlCode String
  apiKey       String
  createdAt    DateTime @default(now())
  expiryAt     DateTime

  @@index(shortUrlCode)
  @@unique([originalUrl, apiKey])
}
