{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "compilerOptions": {
    "assets": [
      "**/*.proto"
    ],
    "watchAssets": true,
    "deleteOutDir": false,
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "assets": [
          "**/*.proto"
        ],
        "watchAssets": true,
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "shortening-service": {
      "type": "application",
      "root": "apps/shortening-service",
      "entryFile": "main",
      "sourceRoot": "apps/shortening-service/src",
      "compilerOptions": {
        "assets": [
          "**/*.proto"
        ],
        "watchAssets": true,
        "tsConfigPath": "apps/shortening-service/tsconfig.app.json"
      }
    },
    "proto": {
      "type": "library",
      "root": "libs/proto",
      "entryFile": "index",
      "sourceRoot": "libs/proto/src",
      "compilerOptions": {
        "tsConfigPath": "libs/proto/tsconfig.lib.json"
      }
    }
  }
}